{
  "guardrails": {
    "content_filtering": {
      "enabled": true,
      "filters": [
        {
          "name": "harmful_content",
          "type": "keyword",
          "keywords": [
            "bomb",
            "hack",
            "illegal"
          ],
          "action": "block"
        },
        {
          "name": "sensitive_data",
          "type": "regex",
          "pattern": "\\\\b\\\\d{4}-\\\\d{4}-\\\\d{4}-\\\\d{4}\\\\b",
          "action": "redact"
        }
      ]
    },
    "security_checks": {
      "prompt_injection_detection": true,
      "data_leakage_prevention": true,
      "system_prompt_protection": true
    }
  }
}